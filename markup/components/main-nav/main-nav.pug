include ../social_icons/social_icons.pug

mixin main-nav(data)
  .main-nav
    .container
      a.main-nav__ham(href="#"): i.fa.fa-bars

      .main-nav__slide-menu
        .main-nav__slide-content
          a.main-nav__slide-close(href="#")
            i.fa.fa-times
          picture
            source.main-nav__slide-logo(srcset="static/img/general/logo_light.svg")
            img.main-nav__slide-logo(src="static/img/general/logo_light.png")
          ul.main-nav__slide-wrapper
            li.main-nav__slide-item: a(href="#") Tour
            li.main-nav__slide-item: a(href="#") Features
            li.main-nav__slide-item: a(href="#") Pricing
            li.main-nav__slide-item: a(href="#") Help
            li.main-nav__slide-item: a(href="#") Contacts
            li.main-nav__slide-item: a.btn.btn_primary(href="#")
              i.fa.fa-apple.fa-lg.btn__pic-left
              |   Get App
          //- only for IE8 it has a bad support of border-box with min/max-width/height
          .main-nav__buffer

        .main-nav__slide-footer
          .main-nav__slide-makers-wrapper
            small.main-nav__slide-text Made with love by 
              a.main-nav__slide-plain-link(href="#") Craft Work
            small.main-nav__slide-text Developed by 
              a.main-nav__slide-plain-link(href="#") Rui Bogas
          +social_icons(social_icons.narrow) 

      nav.row
        .col-md-5
          ul.main-nav__menu.main-nav__menu_left
            li.main-nav__menu-item: a(href="#") Tour
            li.main-nav__menu-item: a(href="#") Features
            li.main-nav__menu-item: a(href="#") Pricing
        .col-md-2
          picture
            source.main-nav__logo(srcset="static/img/general/logo.svg"  width="139px" height="12px")
            img.main-nav__logo(src="static/img/general/logo.png" width="139px" height="12px")
        .col-md-5
          ul.main-nav__menu.main-nav__menu_right
            li.main-nav__menu-item.main-nav__menu-item_help: a(href="#") Help
            li.main-nav__menu-item: a(href="#") Contacts
            li.main-nav__menu-item: a.btn.btn_primary(href="#")
              i.fa.fa-apple.btn__pic-left
              |   Get App